# HITL Platform Configuration
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=HITL Rating Platform
APP_VERSION=2.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
# For SQLite (default): leave empty or use sqlite:///path/to/db.sqlite
# For PostgreSQL: postgresql://user:password@host:port/dbname
DATABASE_URL=

# Security
# IMPORTANT: Change this in production!
SECRET_KEY=change-me-in-production-use-a-long-random-string
SESSION_EXPIRE_DAYS=7
# Set to true when using HTTPS
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# CORS
# Comma-separated list of allowed origins
# For production, set to your actual domain(s)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Storage
# Leave empty to use defaults (./data and ./data/media)
DATA_DIR=
MEDIA_DIR=
# Max upload size in bytes (default: 50MB)
MAX_UPLOAD_SIZE=52428800
